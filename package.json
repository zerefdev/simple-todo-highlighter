{
    "name": "todo-highlighter-extra",
    "displayName": "Todo Highlighter Extra",
    "description": "Highlights TODO keyword and lists all todos in the side bar.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "todo",
        "highlight",
        "todo snippet",
        "todo highlight",
        "todo highlighter"
    ],
    "license": "MIT",
    "publisher": "zerefdev",
    "icon": "src/media/icon.png",
    "homepage": "https://github.com/zerefdev/todo-highlighter/blob/main/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/zerefdev/todo-highlighter.git"
    },
    "bugs": {
        "url": "https://github.com/zerefdev/todo-highlighter/issues",
        "email": "contact@zeref.dev"
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Todo Highlighter Extra",
            "properties": {
                "todoHighlighterExtra.keywordsSettings": {
                    "type": "array",
                    "default": [
                        {
                            "keyword": "TODO:",
                            "decorationType": "background",
                            "primaryColor": "#f1f1f1",
                            "secondaryColor": "#e5aa25",
                            "borderWidth": "1px",
                            "borderRadius": "5px"
                        }
                    ],
                    "description": "Keywords settings."
                },
                "todoHighlighterExtra.rulerPosition": {
                    "type": "string",
                    "default": "Center",
                    "enum": [
                        "Left",
                        "Right",
                        "Center",
                        "Full"
                    ],
                    "description": "The position in the overview ruler where the decoration should be rendered."
                },
                "todoHighlighterExtra.enableRuler": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable decoration in the overview ruler."
                },
                "todoHighlighterExtra.include": {
                    "type": "array",
                    "default": [
                        "**/*.js",
                        "**/*.ts",
                        "**/*.jsx",
                        "**/*.tsx",
                        "**/*.html",
                        "**/*.vue",
                        "**/*.css",
                        "**/*.scss",
                        "**/*.sass",
                        "**/*.less",
                        "**/*.styl",
                        "**/*.py",
                        "**/*.php",
                        "**/*.md"
                    ],
                    "description": "Files/Folders to include."
                },
                "todoHighlighterExtra.exclude": {
                    "type": "array",
                    "default": [
                        "**/node_modules/**",
                        "**/bower_components/**",
                        "**/dist/**",
                        "**/out/**",
                        "**/build/**",
                        "**/.*/**"
                    ],
                    "description": "Files/Folders to exclude."
                }
            }
        },
        "commands": [
            {
                "command": "todoHighlighterExtra.refreshList",
                "category": "Todo Highlighter",
                "title": "Refresh Todo List",
                "icon": "$(refresh)"
            },
            {
                "command": "todoHighlighterExtra.openFile",
                "category": "Todo Highlighter",
                "title": "Open File",
                "icon": "$(file)"
            }
        ],
        "snippets": [
            {
                "path": "src/todo.code-snippets"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "todoHighlighterExtra",
                    "title": "Todo Highlighter",
                    "icon": "src/media/icon.svg"
                }
            ]
        },
        "views": {
            "todoHighlighterExtra": [
                {
                    "id": "todo-list",
                    "name": "Todo List"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "todoHighlighterExtra.refreshList",
                    "when": "view == todo-list",
                    "group": "navigation"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "todo-list",
                "contents": "You have no todos yet."
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "precompile": "rm -rf out",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "^14.14.34",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.28.0",
        "glob": "^7.1.7",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}
